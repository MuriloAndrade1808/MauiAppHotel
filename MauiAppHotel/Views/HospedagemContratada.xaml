<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray900}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               FontFamily="Trajan"
               FontSize="35"
               TextColor="{StaticResource White}"
               HorizontalOptions="Center"/>
        <Frame Margin="5" HorizontalOptions="Center">
            <HorizontalStackLayout>
                <HorizontalStackLayout Margin="10">
                    <Label Text="Adultos: "
                           FontFamily="Andy"
                           FontSize="20"/>
                    <Label Text="{Binding QntAdultos, StringFormat='{} {0}'}"
                           TextColor="{StaticResource Yellow}" 
                           FontFamily="Andy"
                           FontSize="20"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="10">
                    <Label Text="CrianÃ§as: "
                           FontFamily="Andy"
                           FontSize="20"/>
                    <Label Text="{Binding QntCriancas, StringFormat='{} {0}'}" 
                           TextColor="{StaticResource Yellow}" 
                           FontFamily="Andy"
                           FontSize="20"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" FontFamily="Bombardier" HorizontalOptions="Start"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" FontFamily="Bombardier" HorizontalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" FontFamily="Bombardier" HorizontalOptions="End"/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}" 
                       FontFamily="Bombardier" HorizontalOptions="Start"/>
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}" 
                       FontFamily="Bombardier" HorizontalOptions="Center"/>
                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia, StringFormat='{}{0:} dias'}" 
                       FontFamily="Bombardier" HorizontalOptions="End"/>
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Valor Total:"
                       FontFamily="Andy"
                       FontSize="20"/>
                <Label Text="{Binding ValorTotal, StringFormat='{} {0:c}'}"
                       FontFamily="Andy"
                       TextColor="{StaticResource Yellow}"
                       FontSize="20"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" 
                Clicked="Button_Clicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
    
</ContentPage>